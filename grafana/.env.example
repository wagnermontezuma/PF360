# Copie este arquivo para .env e configure as variáveis necessárias

# SMTP (Requerido para notificações por email)
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app

# Discord (Requerido para notificações no Discord)
# Para criar um webhook:
# 1. Abra as configurações do canal no Discord
# 2. Vá em Integrações > Webhooks
# 3. Crie um novo webhook e copie a URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_PATH

# Emails para notificação (separados por vírgula)
ALERT_EMAILS=devops@workout360.com.br,tech@workout360.com.br

# Credenciais do Grafana (altere em produção)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=workout360admin

# Credenciais do banco (altere em produção)
GF_DATABASE_PASSWORD=grafana360

# Credenciais de métricas (altere em produção)
GF_METRICS_BASIC_AUTH_USERNAME=metrics
GF_METRICS_BASIC_AUTH_PASSWORD=metrics360 